<?xml version="1.0"?>
<launch>

    <!-- arg to config the launch file-->

    <arg name="launch_rbkairos" default="true"/>
    <arg name="default_arm_model" default="panda"/>
    <arg name="default_gripper_model" default="hand"/>
    <arg name="default_xacro" default="versions/rbkairos_$(arg default_arm_model)_$(arg default_gripper_model).urdf.xacro"/>
    <arg name="gazebo_world" default="$(find rbkairos_gazebo)/worlds/office.world"/>
    <arg name="debug" default="false"/>
    <arg name="ros_planar_move_plugin" default="true"/>
    <arg name="load_arm_kinematics_file" default="false"/>
    <arg name="launch_base_hw_sim" default="false"/>
    <arg name="launch_battery_estimator" default="false"/>
    <arg name="use_gpu" default="false"/>


    <!--params of the different robots-->
    <!-- rbkairos robot -->
    <arg name="id_rbkairos" default="rbkairos"/>
    <arg name="x_init_pose_rbkairos" default="0" />
    <arg name="y_init_pose_rbkairos" default="0" />
    <arg name="z_init_pose_rbkairos" default="0" />
    <arg name="yaw_init_pose_rbkairos" default="0"/>
    <arg name="xacro_rbkairos" default="$(arg default_xacro)"/>
    <arg name="launch_arm_a" default="true"/>
    <arg name="arm_model_a" default="$(arg default_arm_model)"/>
    <arg name="launch_pad_a" default="false"/>
    <arg name="launch_gripper_a" default="true"/>
    <arg name="gripper_model_a" default="$(arg default_gripper_model)"/>

    <!--BEGIN ROBOT 1-->
    <include if="$(arg launch_rbkairos)" file="$(find collaboration_launch)/launch/bringup/rbkairos_bringup.launch">
        <arg name="id_robot" value="$(arg id_rbkairos)"/>
        <arg name="x_init_pose" value="$(arg x_init_pose_rbkairos)"/>
        <arg name="y_init_pose" value="$(arg y_init_pose_rbkairos)"/>
        <arg name="z_init_pose" value="$(arg z_init_pose_rbkairos)"/>
        <arg name="yaw_init_pose" value="$(arg yaw_init_pose_rbkairos)"/>
        <arg name="xacro_robot" value="$(arg xacro_rbkairos)"/>
        <arg name="ros_planar_move_plugin" value="$(arg ros_planar_move_plugin)"/>
        <arg name="launch_arm" value="$(arg launch_arm_a)"/>
        <arg name="arm_model" value="$(arg arm_model_a)"/>
        <arg name="launch_pad" value="$(arg launch_pad_a)"/>
        <arg name="launch_gripper" value="$(arg launch_gripper_a)"/>
        <arg name="gripper_model" value="$(arg gripper_model_a)"/>
        <arg name="load_arm_kinematics_file" value="$(arg load_arm_kinematics_file)"/>
        <arg name="launch_base_hw_sim" value="$(arg launch_base_hw_sim)"/>
        <arg name="launch_battery_estimator" value="$(arg launch_battery_estimator)"/>
        <arg name="use_gpu" value="$(arg use_gpu)"/>
    </include>

    <!-- Include the MiR robot bringup launch file -->
    <include file="$(find collaboration_launch)/launch/bringup/mir_bringup.launch">
        <arg name="tf_prefix" value="mir"/>
        <arg name="robot_x" value="0.0" />
        <arg name="robot_y" value="-2.0" />
        <arg name="robot_yaw" value="0.0" />
        <arg name="mir_type" value="mir_100" />
    </include>

    <!-- Include the world launch file -->
    <include file="$(find collaboration_launch)/launch/bringup/world.launch">
        <arg name="world" value="$(arg gazebo_world)" />
        <arg name="debug" value="$(arg debug)" />
        <arg name="paused" value="true" />
    </include>


</launch>